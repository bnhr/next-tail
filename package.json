{
  "name": "next-starter-typescript",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint '*/**/*.{ts,tsx}' --cache --quiet",
    "lint:fix": "eslint '*/**/*.{ts,tsx}' --cache --fix",
    "format": "prettier --write .",
    "fix:all": "yarn type-check && yarn lint:fix && yarn format",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@next/eslint-plugin-next": "^12.0.7",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.2",
    "typescript": "4.5.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint '*/**/*.{ts,tsx}' --cache --fix",
      "prettier --write ."
    ],
    "src/**/*.{json,css,scss,md,mdx,js}": [
      "prettier --write ."
    ]
  }
}
